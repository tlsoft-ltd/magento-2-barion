<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../Magento/Config/etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="bariongateway" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Barion Smart Gateway payment</label>
                <group id="credentials" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Credentials</label>
                    <field id="keyfile" translate="label comment" type="file" sortOrder="50" showInDefault="1"
                           showInWebsite="1" showInStore="1">
                        <label>Upload Keyfile</label>
                        <config_path>payment/cibgateway/keyfile</config_path>
                        <backend_model>TLSoft\CibGateway\Model\Config\Backend\Keyfile</backend_model>
                        <base_url type="media" scope_info="1">keyfile</base_url>
                    </field>
                    <field id="pid_huf" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1"
                           showInStore="1">
                        <label>Shop ID HUF</label>
                        <config_path>payment/cibgateway/pid_huf</config_path>
                    </field>
                    <field id="pid_eur" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1"
                           showInStore="1">
                        <label>Shop ID EUR</label>
                        <config_path>payment/cibgateway/pid_eur</config_path>
                    </field>
                </group>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Title</label>
                </field>
                <field id="test_mode" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Test Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
                <field id="allowspecific" translate="label" type="allowspecific" sortOrder="90" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="100" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Payment from Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="log" translate="label" type="select" sortOrder="110" showInDefault="1" showInWebsite="0"
                       showInStore="0">
                    <label>Enable Logging</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="debug" type="select" translate="label" showInDefault="1" showInWebsite="0" showInStore="0"
                       sortOrder="120">
                    <label>Debug mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>