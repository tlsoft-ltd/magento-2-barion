<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
  <default>
    <payment>
      <cibgateway>
        <active>0</active>
        <title>Barion Smart Gateway payment</title>
        <test_mode>1</test_mode>
        <order_status>processing</order_status>
        <payment_action>authorize</payment_action>
        <sort_order>10</sort_order>
        <allowspecific>0</allowspecific>
        <log>0</log>
        <debug>0</debug>
        <group>online</group>
        <model>BarionGatewayGatewayAdapter</model>
        <can_authorize>1</can_authorize>
        <can_capture>1</can_capture>
        <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
        <is_gateway>1</is_gateway>
        <can_use_checkout>1</can_use_checkout>
        <can_refund>1</can_refund>
        <can_void>1</can_void>
        <can_initialize>1</can_initialize>
        <can_use_internal>0</can_use_internal>
        <can_use_for_multishipping>0</can_use_for_multishipping>
        <enabledlocales>HU,EN,DE,IT,FR,PL,PT,CZ,ES,RO,SK</enabledlocales>
        <allowedcurrency>HUF,EUR</allowedcurrency>
        <market_url><![CDATA[http://eki.cib.hu:8090/market.saki/]]></market_url>
        <market_test_url><![CDATA[http://ekit.cib.hu:8090/market.saki/]]></market_test_url>
        <customer_url><![CDATA[https://eki.cib.hu/customer.saki]]></customer_url>
        <customer_test_url><![CDATA[https://ekit.cib.hu/customer.saki]]></customer_test_url>
      </cibgateway>
    </payment>
  </default>
</config>